<%- include('partials/header', { title: 'Error', extraStyles: `
<style>
  body { background: #f8fafc; color: #1e293b; }
</style>
` }) %>

<main class="flex-1 flex items-center justify-center">
  <div class="text-center p-8">
    <div class="text-6xl mb-6">⚠️</div>
    <h1 class="text-3xl font-bold text-gray-900 mb-4">Oops! Something went wrong</h1>
    <p class="text-lg text-gray-600 mb-8">
      <%= typeof message !== 'undefined' ? message : 'An unexpected error occurred' %>
    </p>
    <a href="/" class="inline-flex items-center px-6 py-3 bg-blue-500 text-white font-medium rounded hover:bg-blue-600 transition-colors">
      <i class="fas fa-home mr-2"></i>Back to Dashboard
    </a>
  </div>
</main>

<%- include('partials/footer') %>