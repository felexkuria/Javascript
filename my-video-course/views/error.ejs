<%- include('partials/header', { 
  title: 'Error',
  extraStyles: `
    <style>
      .error-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 60vh;
        text-align: center;
        padding: 2rem;
      }
      .error-icon {
        font-size: 4rem;
        color: #ef4444;
        margin-bottom: 1rem;
      }
      .error-title {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 1rem;
        color: #1f2937;
      }
      .error-message {
        font-size: 1.2rem;
        margin-bottom: 2rem;
        color: #4b5563;
      }
      .back-button {
        display: inline-flex;
        align-items: center;
        padding: 0.75rem 1.5rem;
        background-color: #4f46e5;
        color: white;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: background-color 0.2s;
      }
      .back-button:hover {
        background-color: #4338ca;
      }
    </style>
  `
}) %>

<main class="flex-grow overflow-y-auto">
  <div class="error-container">
    <div class="error-icon">
      <i class="fas fa-exclamation-triangle"></i>
    </div>
    <h1 class="error-title">Oops! Something went wrong</h1>
    <p class="error-message"><%= typeof message !== 'undefined' ? message : 'An unexpected error occurred' %></p>
    <a href="/dashboard" class="back-button">
      <i class="fas fa-home mr-2"></i> Back to Dashboard
    </a>
  </div>
</main>

<%- include('partials/footer') %>