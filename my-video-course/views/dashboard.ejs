<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Video Dashboard</title>
  <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans text-gray-900">
  <div class="flex h-screen">
    <nav class="w-64 bg-white shadow-md h-full flex flex-col">
        <div class="p-4">
          <h1 class="text-2xl font-bold mb-2 truncate">Video Dashboard</h1>
          <ul class="space-y-4">
            <li><a href="#" class="text-gray-700 hover:text-blue-500">Home</a></li>
            <li><a href="/upload" class="text-gray-700 hover:text-blue-500">Upload Video</a></li>
            <li><a href="#" class="text-gray-700 hover:text-blue-500">Profile</a></li>
            <li><a href="#" class="text-gray-700 hover:text-blue-500">Settings</a></li>
          </ul>
        </div>
      </nav>

    <main class="flex-grow overflow-y-auto px-4 py-8">
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        <% videos.forEach(video => { %>
          <div class="bg-white rounded-lg shadow-lg p-4">
            <a href="/videos/<%= video._id %>" class="block mb-2">
              <video class="w-full h-48 object-cover rounded" controls>
                <source src="/videos/<%= video.videoUrl %>" type="video/mp4">
                Your browser does not support the video tag.
              </video>
              </a>
            <h2 class="text-lg font-semibold mb-2 truncate"><%= video.title %></h2>
            <p class="text-gray-500"><%= video.description %></p>
            <a href="/videos/<%= video._id %>" class="text-blue-500 hover:underline mt-2 block">Watch Video</a>
          </div>
        <% }) %>
      </div>
    </main>
  </div>
  <script>
    const menuButton = document.getElementById('menuButton');
    const menuLinks = document.getElementById('menuLinks');

    menuButton.addEventListener('click', () => {
      menuLinks.classList.toggle('hidden');
    });
  </script>
</body>
</html>
