<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Video Dashboard</title>
  <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-4">Video Dashboard</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        <% videos.forEach(video => { %>
          <div class="bg-white rounded-lg shadow-lg p-4">
            <a href="/videos/<%= video._id %>" class="block mb-2">
                <video class="w-full h-48 object-cover rounded" controls>
                    <source src="/videos/<%= video.videoUrl %>" type="video/mp4">
                    Your browser does not support the video tag.
                  </video>
              <!-- <img src="path_to_thumbnail_or_placeholder" alt="<%= video.title %>" class="w-full h-48 object-cover rounded"> -->
            </a>
            <h2 class="text-lg font-semibold mb-2"><%= video.title %></h2>
            <p class="text-gray-500"><%= video.description %></p>
            <a href="/videos/<%= video._id %>" class="text-blue-500 hover:underline mt-2 block">Watch Video</a>
          </div>
        <% }) %>
      </div>
      
  </div>
</body>
</html>
