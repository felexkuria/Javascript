<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Video Sections</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <style>
    .progress-circle {
      width: 40px;
      height: 40px;
      position: relative;
    }

    .progress-circle .circle-bg {
      fill: none;
      stroke: #e6e6e6;
      stroke-width: 3.8;
    }

    .progress-circle .circle {
      fill: none;
      stroke-width: 3.8;
      stroke-linecap: round;
      animation: progress 1s ease-out forwards;
    }

    @keyframes progress {
      from {
        stroke-dasharray: 0 100;
      }
    }

    .progress-container {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .section-dropdown {
      display: none;
    }

    .section-dropdown.open {
      display: block;
    }
  </style>
</head>
<body class="bg-gray-100">
  
    <div class="w-1/4 bg-white shadow-lg p-2">
      <div class="p-4 border-b bg-blue-500 flex justify-between items-center">
        <h2 class="text-xl font-lexend-deca font-semibold text-white">Sections</h2>
        <div class="progress-circle">
          <svg viewBox="0 0 36 36">
            <path
              class="circle-bg"
              d="M18 2.0845
                 a 15.9155 15.9155 0 0 1 0 31.831
                 a 15.9155 15.9155 0 0 1 0 -31.831"
            />
            <path
              class="circle"
              stroke-dasharray="<%= (watchedVideos / totalVideos) * 100 %>, 100"
              d="M18 2.0845
                 a 15.9155 15.9155 0 0 1 0 31.831
                 a 15.9155 15.9155 0 0 1 0 -31.831"
              stroke="<%= (watchedVideos / totalVideos) * 100 %> >= 75 ? 'green' : 'orange' %>"
            />
          </svg>
        </div>
      </div>
      <div>
        <% for (let section in sections) { %>
          <a href="/section/<%= section %>" class="block text-xs truncate py-2 px-4 text-gray-700 font-lexend-deca hover:bg-blue-200 flex items-center">
            <!-- <img src="https://vendorcenter.jumia.com/assets/images/local_red.svg" alt="Section" class="mr-2 w-4 h-4" /> -->
            <span><%= section %></span>
          </a>
        <% } %>
      </div>
    </div>
    <div class="w-3/4 p-8">
      
      </div>
    </div>
 
  
</body>
<script>
   window.addEventListener('message', function(event) {
      if (typeof event.data === 'number') {
        const progress = event.data;
        document.querySelector('.circle').setAttribute('stroke-dasharray', `${progress}, 100`);
        document.querySelector('.circle').setAttribute('stroke', progress >= 75 ? 'green' : 'orange');
      }
    });
</script>
</html>
