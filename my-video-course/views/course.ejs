<%- include('partials/header', {
  title: `${courseName} Course`,
  extraStyles: `
    <style>
      .progress-circle {
        width: 36px;
        height: 36px;
      }
      .circle-bg {
        fill: none;
        stroke: #eee;
        stroke-width: 3.8;
      }
      .circle {
        fill: none;
        stroke-width: 3.8;
        stroke-linecap: round;
      }
      .watched {
        stroke: #4CAF50;
      }
      .unwatched {
        stroke: #F44336;
      }
      svg text {
        fill: #333;
        font-size: 0.5em;
        text-anchor: middle;
        font-weight: bold;
      }
      .video-card {
        transition: transform 0.3s ease;
      }
      .video-card:hover {
        transform: translateY(-5px);
      }
    </style>
  `
}) %>

<!-- Main Content -->
<main class="flex-grow overflow-y-auto px-4 py-8 md:px-8">
  <div class="flex flex-col md:flex-row">
    <!-- Section Sidebar -->
    <% if (typeof sections !== 'undefined' && Object.keys(sections).length > 0) { %>
      <div class="w-full md:w-1/4 bg-white shadow-lg p-2 mb-4 md:mb-0 md:mr-4">
        <div class="p-4 border-b bg-blue-500 flex justify-between items-center">
          <h2 class="text-xl font-semibold text-white">Sections</h2>
          <% if (typeof watchedVideos !== 'undefined' && typeof totalVideos !== 'undefined') { %>
            <div class="mx-4 progress-circle">
              <svg viewBox="0 0 36 36">
                <path class="circle-bg" d="M18 2.0845a15.9155 15.9155 0 0 1 0 31.831a15.9155 15.9155 0 0 1 0 -31.831" />
                <path class="circle <%= (watchedVideos / totalVideos) * 100 >= 75 ? 'watched' : 'unwatched' %>"
                  stroke-dasharray="<%= (watchedVideos / totalVideos) * 100 %>, 100"
                  d="M18 2.0845a15.9155 15.9155 0 0 1 0 31.831a15.9155 15.9155 0 0 1 0 -31.831" />
                <text x="18" y="20">
                  <%= Math.round((watchedVideos / totalVideos) * 100) %>%
                </text>
              </svg>
            </div>
          <% } %>
        </div>
        <div>
          <% for (let section in sections) { %>
            <a href="/course/<%= courseName %>?section=<%= section %>"
              class="block text-xs truncate py-2 px-4 text-gray-700 hover:bg-blue-200 flex items-center <%= selectedSection === section ? 'bg-green-200' : '' %>">
              <span><%= section %></span>
            </a> 
          <% } %>
        </div>
      </div>
    <% } %>

    <!-- Main Content -->
    <div class="w-full <%= typeof sections !== 'undefined' && Object.keys(sections).length > 0 ? 'md:w-3/4' : 'w-full' %>">
      <% if (typeof selectedSection !== 'undefined') { %>
        <!-- Section View -->
        <div class="mb-6">
          <h1 class="text-2xl font-bold text-gray-800 flex items-center">
            Section: <%= selectedSection %>
            <% if (typeof watchedVideos !== 'undefined' && typeof totalVideos !== 'undefined') { %>
              <div class="mx-4 progress-circle">
                <svg viewBox="0 0 36 36">
                  <path class="circle-bg" d="M18 2.0845a15.9155 15.9155 0 0 1 0 31.831a15.9155 15.9155 0 0 1 0 -31.831" />
                  <path class="circle <%= (watchedVideos / totalVideos) * 100 >= 75 ? 'watched' : 'unwatched' %>"
                    stroke-dasharray="<%= (watchedVideos / totalVideos) * 100 %>, 100"
                    d="M18 2.0845a15.9155 15.9155 0 0 1 0 31.831a15.9155 15.9155 0 0 1 0 -31.831" />
                  <text x="18" y="20">
                    <%= Math.round((watchedVideos / totalVideos) * 100) %>%
                  </text>
                </svg>
              </div>
            <% } %>
          </h1>
        </div>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
          <% videos.forEach(video => { %>
            <% if (video.videoUrl) { %>
              <div class="video-card bg-white rounded-lg shadow-md overflow-hidden">
                <a href="/videos/<%= courseName %>/<%= video._id %>">
                  <img src="/download.jpg" alt="<%= video.title %>" class="w-full h-auto object-cover rounded-t-lg" />
                </a>
                <div class="p-4">
                  <h2 class="video-title text-sm font-medium <%- video.watched ? "text-fuchsia-800" : "text-gray-900" %> mb-2 truncate">
                    <i class="fa-solid <%- video.watched ? 'fa-check text-green-500' : 'fa-xmark text-red-500' %>"></i>
                    <%= video.title %>
                  </h2>
                  <p class="video-description <%- video.watched ? "text-fuchsia-800" : "text-gray-900" %> text-xs truncate">
                    <%= video.description %>
                  </p>
                </div>
              </div>
            <% } %>
          <% }) %>
        </div>
      <% } else { %>
        <!-- Course View -->
        <h1 class="text-3xl font-bold text-gray-800 mb-6"><%= courseName %></h1>
        
        <% if (typeof error !== 'undefined') { %>
          <div class="text-center p-6 bg-red-50 text-red-700 rounded-xl shadow-sm">
            <%= error %>
          </div>
        <% } else if (videos.length === 0) { %>
          <div class="text-center p-6 bg-red-50 text-red-700 rounded-xl shadow-sm">
            No videos found for this course.
          </div>
        <% } else { %>
          <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% 
            // Sort videos by title (assuming titles start with numbers)
            const sortedVideos = videos.sort((a, b) => {
              const aNum = parseInt(a.title.match(/\d+/)) || 0;
              const bNum = parseInt(b.title.match(/\d+/)) || 0;
              return aNum - bNum;
            });
            
            sortedVideos.forEach((video, index) => { 
            %>
              <li class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
                <div class="relative">
                  <img
                    src="https://static.wixstatic.com/media/e7182f_ce51e32517d147c8a9eb08766c12f9fa~mv2.png/v1/fill/w_960,h_540,al_c/e7182f_ce51e32517d147c8a9eb08766c12f9fa~mv2.png"
                    alt="<%= video.title %>"
                    class="w-full h-48 object-cover hover:opacity-90 transition-opacity duration-300"
                  />
                  <div class="absolute top-0 left-0 bg-indigo-500 text-white px-3 py-1 rounded-br-lg">
                    Lesson <%= index + 1 %>
                  </div>
                  <% if (video.watched) { %>
                    <div class="absolute top-0 right-0 bg-green-500 text-white px-3 py-1 rounded-bl-lg">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                    </div>
                  <% } %>
                </div>
                <div class="p-6">
                  <h3 class="text-lg font-semibold text-gray-800 mb-3">
                    <%= video.title %>
                  </h3>
                  <% if (video.videoUrl && video.videoUrl.endsWith('.pdf')) { %>
                    <a
                      href="/pdf/<%= courseName %>/<%= encodeURIComponent(video.basename) %>"
                      target="_blank"
                      class="inline-flex items-center px-4 py-2 bg-emerald-500 text-white font-medium rounded-lg hover:bg-emerald-600 transition-colors duration-200"
                    >
                      <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9 2a2 2 0 00-2 2v8a2 2 0 002 2h6a2 2 0 002-2V6.414A2 2 0 0016.414 5L14 2.586A2 2 0 0012.586 2H9z"></path>
                      </svg>
                      View PDF
                    </a>
                  <% } else { %>
                    <a
                      href="/videos/<%= courseName %>/<%= video._id %>"
                      class="inline-flex items-center px-4 py-2 bg-indigo-500 text-white font-medium rounded-lg hover:bg-indigo-600 transition-colors duration-200"
                    >
                      <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 12l-4-4h8l-4 4z"></path>
                      </svg>
                      Watch Lesson <%= index + 1 %>
                    </a>
                  <% } %>
                </div>
              </li>
            <% }); %>
          </ul>
        <% } %>
      <% } %>
    </div>
  </div>
</main>

<%- include('partials/footer') %>