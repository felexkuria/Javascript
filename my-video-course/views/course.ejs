<%- include('partials/header', { title: `${courseName} Course`, extraStyles: `
<style>
  body {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
  }
  .glass-card {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }
  .glass-header {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  .video-card {
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .video-card:hover {
    transform: translateY(-8px) scale(1.02);
  }
</style>
` }) %>

<!-- Main Content -->
<main class="flex-grow overflow-y-auto px-4 py-8 md:px-8">
  <div class="glass-header rounded-2xl p-8 mb-8">
    <h1 class="text-5xl font-bold text-white mb-4">
      ðŸ“š <%= courseName %>
    </h1>
    <p class="text-xl text-white opacity-90 mb-6">Master new skills with our comprehensive course</p>
    
    <% if (typeof watchedVideos !== 'undefined' && typeof totalVideos !== 'undefined') { %>
    <div class="bg-white bg-opacity-20 backdrop-filter backdrop-blur-sm rounded-xl p-6 border border-white border-opacity-30">
      <div class="flex justify-between items-center mb-3">
        <span class="text-white font-semibold">Course Progress</span>
        <span class="text-white font-bold"
          ><%= watchedVideos %>/<%= totalVideos %> videos (<%= Math.round((watchedVideos / totalVideos) * 100) %>%)</span
        >
      </div>
      <div class="h-3 bg-white bg-opacity-30 rounded-full overflow-hidden">
        <div
          class="h-full bg-gradient-to-r from-green-400 to-green-600 rounded-full transition-all duration-500"
          style="width: <%= typeof watchedPercent !== 'undefined' ? watchedPercent : Math.round((watchedVideos / totalVideos) * 100) %>%"
        ></div>
      </div>
    </div>
    <% } %>
  </div> <% if (typeof error !== 'undefined') { %>
  <div class="text-center p-6 bg-red-50 text-red-700 rounded-xl shadow-sm">
    <%= error %>
  </div>
  <% } else { %>
  <!-- Videos Section -->
  <div class="glass-header rounded-xl p-6 mb-6">
    <h2 class="text-3xl font-bold text-white">ðŸŽ¥ Course Videos</h2>
  </div>
  <% if (videos.length === 0) { %>
  <div class="text-center p-6 bg-red-50 text-red-700 rounded-xl shadow-sm mb-8">
    No videos found for this course.
  </div>
  <% } else { %>
  <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
    <% 
    // Group videos by chapter
    const videosByChapter = {};
    videos.forEach(video => {
      const chapter = video.chapter || 'Uncategorized';
      if (!videosByChapter[chapter]) {
        videosByChapter[chapter] = [];
      }
      videosByChapter[chapter].push(video);
    });

    // Sort videos within each chapter with better numerical parsing
    Object.keys(videosByChapter).forEach(chapter => {
      videosByChapter[chapter].sort((a, b) => {
        // Extract all numbers from title and use the first one
        const aMatch = a.title.match(/\d+/);
        const bMatch = b.title.match(/\d+/);
        const aNum = aMatch ? parseInt(aMatch[0], 10) : 0;
        const bNum = bMatch ? parseInt(bMatch[0], 10) : 0;
        
        // If numbers are the same, sort alphabetically
        if (aNum === bNum) {
          return a.title.localeCompare(b.title);
        }
        return aNum - bNum;
      });
    });

    // Sort chapters numerically and flatten sorted videos back into single array
    const sortedVideos = Object.keys(videosByChapter)
      .sort((a, b) => {
        // Handle chapter sorting with better number extraction
        const aMatch = a.match(/\d+/);
        const bMatch = b.match(/\d+/);
        const aNum = aMatch ? parseInt(aMatch[0], 10) : 0;
        const bNum = bMatch ? parseInt(bMatch[0], 10) : 0;
        
        // If numbers are the same, sort alphabetically
        if (aNum === bNum) {
          return a.localeCompare(b);
        }
        return aNum - bNum;
      })
      .flatMap(chapter => videosByChapter[chapter]);

    let currentChapter = '';
    let chapterCount = 0;
    sortedVideos.forEach((video, index) => { 
      const chapter = video.chapter || 'Uncategorized';
      if (chapter !== currentChapter) {
        currentChapter = chapter;
        chapterCount++;
    %>
        <li class="col-span-full">
          <h2 class="text-2xl font-bold text-gray-800 mb-4 bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
            <%= video.chapter || 'Uncategorized' %>
          </h2>
        </li>
    <% } %>
    <li
      class="glass-card video-card rounded-2xl overflow-hidden"
    >
      <div class="relative">
        <% if (video.thumbnailUrl) { %>
        <img
          src="<%= video.thumbnailUrl %>"
          alt="<%= video.title %>"
          class="w-full h-48 object-cover hover:opacity-90 transition-opacity duration-300"
          onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
        />
        <% } %>
        <div class="w-full h-48 bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-white <%= video.thumbnailUrl ? 'hidden' : 'flex' %>">
          <div class="text-center">
            <i class="fas fa-play-circle text-4xl mb-2"></i>
            <p class="text-sm font-medium">Video Lesson</p>
          </div>
        </div>
        <div
          class="absolute top-0 left-0 bg-indigo-500 text-white px-3 py-1 rounded-br-lg"
        >
          Lesson <%= index + 1 %>
        </div>
        <% if (video.watched) { %>
        <div
          class="absolute top-0 right-0 bg-green-500 text-white px-3 py-1 rounded-bl-lg"
        >
          âœ…
        </div>
        <% } %>
      </div>
      <div class="p-6">
        <h3 class="text-lg font-semibold text-gray-800 mb-3 flex items-center">
          <%= video.title %> <% if (video.watched) { %>
          <span class="ml-2 text-green-500 text-sm">âœ… Watched</span>
          <% } %>
        </h3>
        <% if (video.videoUrl && video.videoUrl.endsWith('.pdf')) { %>
        <a
          href="/pdf/<%= courseName %>/<%= encodeURIComponent(video.basename) %>"
          target="_blank"
          class="inline-flex items-center px-4 py-2 bg-emerald-500 text-white font-medium rounded-lg hover:bg-emerald-600 transition-colors duration-200"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path
              d="M9 2a2 2 0 00-2 2v8a2 2 0 002 2h6a2 2 0 002-2V6.414A2 2 0 0016.414 5L14 2.586A2 2 0 0012.586 2H9z"
            ></path>
          </svg>
          View PDF
        </a>
        <% } else { %>
        <a
          href="/videos/<%= courseName %>/<%= video._id %>"
          class="inline-flex items-center px-4 py-2 bg-indigo-500 text-white font-medium rounded-lg hover:bg-indigo-600 transition-colors duration-200"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 12l-4-4h8l-4 4z"></path>
          </svg>
          Watch Lesson <%= index + 1 %>
        </a>
        <% } %>
      </div>
    </li>
    <% }); %>
  </ul>
  <% } %>

  <!-- PDFs Section -->
  <% if (typeof pdfs !== 'undefined' && pdfs.length > 0) { %>
  <div class="glass-header rounded-xl p-6 mb-6">
    <h2 class="text-3xl font-bold text-white">ðŸ“„ PDF Resources</h2>
  </div>
  <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% pdfs.forEach((pdf, index) => { %>
    <li
      class="glass-card video-card rounded-2xl overflow-hidden"
    >
      <div class="relative">
        <div class="bg-red-100 h-48 flex items-center justify-center">
          <svg
            class="w-24 h-24 text-red-500"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              d="M9 2a2 2 0 00-2 2v8a2 2 0 002 2h6a2 2 0 002-2V6.414A2 2 0 0016.414 5L14 2.586A2 2 0 0012.586 2H9z"
            ></path>
          </svg>
        </div>
      </div>
      <div class="p-6">
        <h3 class="text-lg font-semibold text-gray-800 mb-3">
          <%= pdf.name %>
        </h3>
        <a
          href="/pdf/<%= pdf.path %>"
          target="_blank"
          class="inline-flex items-center px-4 py-2 bg-red-500 text-white font-medium rounded-lg hover:bg-red-600 transition-colors duration-200"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path
              d="M9 2a2 2 0 00-2 2v8a2 2 0 002 2h6a2 2 0 002-2V6.414A2 2 0 0016.414 5L14 2.586A2 2 0 0012.586 2H9z"
            ></path>
          </svg>
          View PDF
        </a>
      </div>
    </li>
    <% }); %>
  </ul>
  <% } %> <% } %>
</main>

<%- include('partials/footer') %>
