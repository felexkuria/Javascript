<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Section: <%= sectionName %></title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 flex">
  <div class="w-1/4 bg-white shadow-lg">
    <div class="p-4 border-b">
      <h2 class="text-xl font-semibold text-gray-800">Sections</h2>
    </div>
    <div>
      <ul class="flex flex-col space-y-2">  <% for (let section in sections) { %>
          <li class="flex items-center py-2 px-4 text-gray-700 hover:bg-gray-200">
            <i class="mr-2 text-lg text-gray-500">  </i>
            <a href="/section/<%= section %>" class="block w-full">  <%= section %>
            </a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
  <div class="w-3/4 p-8">
    <h1 class="text-4xl font-bold mb-8 text-center">Section: <%= sectionName %></h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% videos.forEach(video => { %>
        <div class="p-6 bg-white border border-gray-200 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
          <a href="/videos/<%= video._id %>">
            <img src="/download.jpg" alt="<%= video.title %>" class="w-full h-48 object-cover rounded-lg mb-4">
          </a>
          <h2 class="text-2xl font-semibold text-gray-800 mb-2"><%= video.title %></h2>
          <p class="text-gray-600"><%= video.description %></p>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
